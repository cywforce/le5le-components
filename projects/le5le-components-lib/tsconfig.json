{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types/!(node)"],
    "skipLibCheck": true,

    "baseUrl": "./",
    "rootDir": "./",
    "target": "es5",
    "module": "es2015",
    "sourceMap": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "outDir": "../release",
    "lib": ["es2015", "dom"],
    "paths": {
      "le5le-components": ["./le5le-components.module"],
      "le5le-components/*": ["./*"]
    }
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true
  }
}
